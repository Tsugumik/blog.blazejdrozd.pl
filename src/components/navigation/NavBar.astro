---
import Container from "../Container.astro";
import Command from "../terminal/Command.astro";

const {pageTitle} = Astro.props;
---

<header class="border-b">
    <div class="container mx-auto px-2 py-4">
        <div>blog@blazejdrozd.pl</div>
        <nav class="bg-black font-mono text-sm underline">
            <ul class="flex gap-2 flex-wrap">
                <li><a href="/">&gt; cd /home</a></li>
                <li><a href="https://blazejdrozd.pl">&gt; cd ~/about</a></li>
                <li><a href="/articles">&gt; ls ~/articles</a></li>
                <li><a href="/announcements">&gt; ls ~/announcements</a></li>
            </ul>
        </nav>
    </div>
</header>

<div class="text-sm">
    <Container>
        <Command cmd=`ssh user@localhost`></Command>
    </Container>
</div>
